<?xml version="1.0" encoding="utf-8"?>
<component type="desktop-application">
	<id>@FREERCT_BASENAME@</id>
	<name>FreeRCT</name>
	<summary>Theme park strategy game</summary>
	<description>
		<p>FreeRCT aims to be a free and open source game which captures the look, feel and gameplay of the popular games RollerCoaster Tycoon 1 and 2.</p>
		<p>The game is still in an early alpha state, but it is already playable and offers a variety of features.</p>
	</description>-
	<categories>
		<category>Game</category>
		<category>StrategyGame</category>
	</categories>
	<content_rating type="oars-1.1">
		<content_attribute id="violence-cartoon">mild</content_attribute>
	</content_rating>
	<launchable type="desktop-id">@FREERCT_BASENAME@.desktop</launchable>
	<screenshots>
		<screenshot type="default">
			<caption>A park in the game</caption>
			<image>https://freerct.net/img/screenshots/appdata/mainview.png</image>
		</screenshot>
		<screenshot>
			<caption>The game's main menu</caption>
			<image>https://freerct.net/img/screenshots/appdata/mainmenu.png</image>
		</screenshot>
	</screenshots>
	<releases>
		<release version="0.1" date="2022-03-19">
			<description>
				<p>This is the first-ever release of FreeRCT!</p>
			</description>
		</release>
	</releases>
	<url type="homepage">https://freerct.net</url>
	<url type="bugtracker">https://codeberg.org/FreeRCT/FreeRCT/issues</url>
	<project_license>GPL-2.0</project_license>
	<metadata_license>GFDL-1.2</metadata_license>
</component>
